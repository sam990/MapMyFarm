<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/farm_cardview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/cardview_tag"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/farm_id"
                    android:textColor="@android:color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/cardview_crop">

                </TextView>

                <TextView
                    android:id="@+id/cardview_farmid"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/farm_id"
                    android:textColor="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/cardview_tag"
                    app:layout_constraintStart_toEndOf="@id/cardview_tag"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/cardview_tag">

                </TextView>

                <TextView
                    android:id="@+id/cardview_crop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/crop"
                    android:textColor="@android:color/white"
                    app:layout_constraintBottom_toTopOf="@id/linearLayout"
                    app:layout_constraintStart_toStartOf="@id/linearLayout"
                    app:layout_constraintTop_toBottomOf="@id/cardview_tag">

                </TextView>

                <TextView
                    android:id="@+id/cardview_crop_value"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/crop"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="@id/cardview_crop"
                    app:layout_constraintStart_toEndOf="@id/cardview_crop"
                    app:layout_constraintTop_toTopOf="@id/cardview_crop">

                </TextView>

                <TextView
                    android:id="@+id/cardview_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sow_date"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/cardview_crop"
                    app:layout_constraintStart_toEndOf="@id/cardview_crop_value"
                    app:layout_constraintTop_toTopOf="@id/cardview_crop"/>

                <TextView
                    android:id="@+id/cardview_date_value"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sow_date"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="@id/cardview_crop"
                    app:layout_constraintStart_toEndOf="@id/cardview_date"
                    app:layout_constraintTop_toTopOf="@id/cardview_crop">

                </TextView>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/cardview_tag"
                    app:layout_constraintTop_toBottomOf="@+id/cardview_crop">

                    <TextView
                        android:id="@+id/cardview_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:textColor="@android:color/white"
                        android:text="@string/area">

                    </TextView>

                    <TextView
                        android:id="@+id/cardview_area_value"
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:textColor="@android:color/white"
                        android:text="@string/area">

                    </TextView>

                    <TextView
                        android:id="@+id/cardview_area_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="@string/sq_m">

                    </TextView>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>